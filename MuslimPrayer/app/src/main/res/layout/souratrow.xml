<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp">

    <ImageView
        android:id="@+id/iv_artwork"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_opacity_66">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/grid_item_padding">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre"
            android:textColor="@color/white_text"
            android:textSize="@dimen/grid_movie_title_font_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ordre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:text="order"
            android:textColor="@color/white_text"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ordre"
            android:text="length"
            android:textColor="@color/white_text"
            android:textSize="14dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/read"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|bottom"
            android:layout_marginLeft="4dp"
            android:src="@drawable/book"
            android:tint="@color/white_text"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/share" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"

            android:layout_gravity="right|bottom"
            android:layout_marginLeft="4dp"
            android:src="@drawable/ear" />

        <ImageView
            android:id="@+id/listen"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|bottom"
            android:src="@drawable/ic_menu_share"
            android:tint="@color/white_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


</FrameLayout>